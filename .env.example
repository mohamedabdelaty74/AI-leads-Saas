# Elite Creatif SaaS Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ===== Security Configuration =====
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=your-jwt-secret-key-here-generate-with-secrets-token-urlsafe
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
BCRYPT_ROUNDS=12

# ===== Database Configuration =====
# Development (SQLite)
DATABASE_URL=sqlite:///./database/elite_creatif_production.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis (optional, falls back to memory cache)
REDIS_URL=redis://localhost:6379/0

# ===== Encryption Keys =====
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=your-encryption-key-here-64-chars

# ===== External API Keys =====
# Google Maps/Search API (https://console.cloud.google.com/)
GOOGLE_API_KEY=your-google-api-key

# Hugging Face API (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your-huggingface-token

# SerpAPI (https://serpapi.com/manage-api-key)
SERPAPI_KEY=your-serpapi-key

# Hunter.io Email Finder (https://hunter.io/api_keys)
HUNTER_API_KEY=your-hunter-api-key

# ===== Stripe Configuration =====
# Get keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== Email Configuration =====
# SendGrid (https://app.sendgrid.com/settings/api_keys)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# Or use SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password

# ===== Admin Configuration =====
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-to-a-secure-password
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# ===== Application Settings =====
ENVIRONMENT=development
ENV=development  # Set to "production" for multi-worker mode
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
BACKEND_URL=http://localhost:8000

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7860

# ===== Security Settings =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
MAX_LOGIN_ATTEMPTS=5
SESSION_EXPIRE_MINUTES=30

# ===== Monitoring & Error Tracking =====
# Sentry (https://sentry.io/)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== File Storage (AWS S3) - Optional =====
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# ===== Background Jobs =====
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===== Feature Flags =====
ENABLE_AI_GENERATION=true
ENABLE_WHATSAPP=true
ENABLE_ANALYTICS=true
ENABLE_EXPORT=true
